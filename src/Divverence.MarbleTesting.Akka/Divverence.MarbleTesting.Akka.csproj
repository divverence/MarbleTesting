<Project Sdk="Microsoft.NET.Sdk">

  <!-- BUILD -->
  <PropertyGroup>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <!-- *DESCRIPTION* -->
  <PropertyGroup>
    <Description>Divverence.MarbleTesting Library for Akka.Net</Description>
  </PropertyGroup>

  <!-- *REF NUGET PACKAGES* -->
  <ItemGroup>
    <PackageReference Include="Akka.TestKit" Version="1.3.1" />
  </ItemGroup>

  <!-- *REF PROJECTS* -->
  <ItemGroup>
    <ProjectReference Include="..\Divverence.MarbleTesting\Divverence.MarbleTesting.csproj" />
  </ItemGroup>

  <!-- Divverence.Gear.Configuration -->
  <ItemGroup>
    <ConfigurationFiles Include="etc\**\*.properties" />
  </ItemGroup>
  <Target Name="MyAfterBuild" AfterTargets="Build">
    <Copy SourceFiles="@(ConfigurationFiles)" DestinationFiles="@(ConfigurationFiles->'$(OutDir)..\etc\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" UseHardlinksIfPossible="true" />
  </Target>

</Project>
