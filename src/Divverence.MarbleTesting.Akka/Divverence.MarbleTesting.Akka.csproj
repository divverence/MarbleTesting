<Project Sdk="Microsoft.NET.Sdk">

  <!-- BUILD -->
  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <PlatformTarget>x64</PlatformTarget>
    <LangVersion>latest</LangVersion>
    <DebugType>embedded</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <!-- PACKAGE AND VERSION CREATION -->
  <PropertyGroup>
    <Copyright>Copyright 2015-2018 Divverence B.V.</Copyright>
    <Authors>Divverence B.V.</Authors>
    <PackageIconUrl>http://www.divverence.com/favicon.ico</PackageIconUrl>
  </PropertyGroup>
  <ItemGroup>
    <EmbeddedFiles Include="@(Compile);@(AdditionalFiles)" />
    <Compile Include="..\..\built\SharedAssemblyInfo*.cs" Link="SharedAssemblyInfo.cs" />
  </ItemGroup>

  <!-- *DESCRIPTION* -->
  <PropertyGroup>
    <Description>Divverence.MarbleTesting Library for Akka.Net</Description>
  </PropertyGroup>

  <!-- *REF NUGET PACKAGES* -->
  <ItemGroup>
    <PackageReference Include="Akka.TestKit" Version="1.3.1" />
  </ItemGroup>

  <!-- *REF PROJECTS* -->
  <ItemGroup>
    <ProjectReference Include="..\Divverence.MarbleTesting\Divverence.MarbleTesting.csproj" />
  </ItemGroup>

  <!-- Divverence.Gear.Configuration -->
  <ItemGroup>
    <ConfigurationFiles Include="etc\**\*.properties" />
  </ItemGroup>
  <Target Name="MyAfterBuild" AfterTargets="Build">
    <Copy SourceFiles="@(ConfigurationFiles)" DestinationFiles="@(ConfigurationFiles->'$(OutDir)..\etc\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" UseHardlinksIfPossible="true" />
  </Target>

</Project>
